{
  "manifest_version": 2,
  "name": "Rye Console",
  "version": "1.0",
  "description": "A Rye programming language console accessible as a Firefox popup",
  
  "permissions": [
    "activeTab"
  ],
  
  "browser_action": {
    "default_title": "Open Rye Console",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png", 
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  
  "web_accessible_resources": [
    "main.wasm",
    "wasm_exec.js",
    "jsGoo.js",
    "xterm.js",
    "xterm.css",
    "xterm-addon-webgl.js"
  ],
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; worker-src 'self'"
}
